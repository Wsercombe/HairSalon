@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div class = "container">
  <div class = "text-area">
    <h1>Clients Page</h1>
  </div>
  @if (@Model.Count == 0)
  {
    <div class = "text-area">
      <h3>No clients have been added yet!</h3>
    </div>
  } 

  @foreach (Client client in Model)
  {
    <div class = "text-area">
      <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</li>  
    </div>

  }
  <div class = "text-area">
    <p>@Html.ActionLink("Add new client", "Create")</p>
  </div>
  <div class = "text-area">
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
  </div>
</div>
